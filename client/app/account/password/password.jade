#content
  form#form-password(role="form")
    label(for="old-password") Old password
    input.form-control(type="password" name="old-password" id="old-password" ng-model="passwords.old")
    label(for="new-password") New password
    input.form-control(type="password" name="new-password" id="new-password" ng-model="passwords.new")
    label(for="new-password-confirm") Confirm new password
    input.form-control(
      type="password" 
      name="new-password-confirm" 
      id="new-password-confirm" 
      ng-model="passwords.confirm"
    )

    button.btn.btn-default(ng-click="updatePassword(passwords.old, passwords.new, passwords.confirm)") Update password

