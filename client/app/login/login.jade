append head 
  link(rel="stylesheet" href="/css/login/login.css")

append content
  div.container(ng-cloak)
    form.form-signin(ng-submit="login()")
      h4.form-signin-heading Sign in
      input.form-control(type="text" ng-model="user.name" name="username" placeholder="Email address" required autofocus)
      input.form-control(type="password" ng-model="user.password" name="password" placeholder="Password" required)
      button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in

