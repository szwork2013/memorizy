#content
  form.register-form(role="form")
    .form-group
      label(for="username") Username
      input.form-control(type="text" id="username" name="username" ng-model="user.name")
    .form-group
      label(for="email") Email
      input.form-control(type="email" id="email" name="email" ng-model="user.email")
    .form-group
      label(for="password") Password
      input.form-control(type="password" id="password" name="password" ng-model="user.password")
    .form-group
      button.btn.btn-default(ng-click="register(user)") Register

