  .modal.fade(id="modal-upload-image" role="dialog" aria-labelledby="Upload" aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          button(type="button" class="close" data-dismiss="modal" aria-hidden="true") &times;
          h4.modal-title#id="Upload image"
        .modal-body
          form(role="form")
            .form-group
              label(for="filename-input") Image
              input(type="file" ng-file-select="onFileSelect($files)")

        .modal-footer
          button(type="button" class="btn btn-default" data-dismiss="modal") Cancel
          button.upload-image(type="button" class="btn btn-primary" data-dismiss="modal" ng-click="uploadImage()") Upload
