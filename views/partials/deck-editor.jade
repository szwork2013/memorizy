append content
  #content
    #flashcard-editor
      #content-left
        #list-flashcards.list-group
          a.flashcard-item.list-group-item(ng-repeat="flashcard in deck.flashcards" 
          ng-class="{active: deck.active == $index}" href="#" data-flashcard-id="{{flashcard.id}}"
          ng-click="display($index)" ng-mouseover="setDeleteButtonIndex($index)")
            .term.list-group-item-heading
              //-.media.media-thumbnail
              .text(ng-bind-html="trustAsHtml(flashcard.term_text)")
            .definition.list-group-item-heading
              //-.media.media-thumbnail
              .text(ng-bind-html="trustAsHtml(flashcard.definition_text)")
            .btn-delete.glyphicon.glyphicon-remove(ng-click="removeFlashcard($index);")

      #content-center
        nav#edit-tools
          a#btn-bold.btn-style(href="#" title="Bold")
            span.glyphicon.glyphicon-bold
          a#btn-italic.btn-style(href="#" title="Italic")
            span.glyphicon.glyphicon-italic
        #flashcard
          .term(side ng-tab="editDefinition()" ng-shift-tab="display(deck.active - 1)" ng-blur="edit.term = false" ng-click="editTerm()")
            textarea#term-input.text(
              ng-show="edit.term == true"
              ng-model="markdown.term"
              spellcheck="false" 
              ng-blur="edit.term = false"
            ) 
            #preview-term.preview(ng-show="edit.term == false" ng-bind-html="trustAsHtml(deck.flashcards[deck.active].term_text)")

            a.btn-image.btn-style(href="#" data-toggle="modal" data-target="#modal-upload-image")
              span.glyphicon.glyphicon-picture
          .definition(side ng-tab="display(deck.active + 1)" ng-shift-tab="editTerm()" ng-blur="edit.definition = false" ng-click="editDefinition()")
            textarea#definition-input.text(
              ng-show="edit.definition == true"
              ng-model="markdown.definition"
              spellcheck="false"
              ng-blur="edit.definition = false"
            )
            #preview-definition.preview(ng-show="edit.definition == false" ng-bind-html="trustAsHtml(deck.flashcards[deck.active].definition_text)")
            
            a.btn-image.btn-style(href="#" data-toggle="modal" data-target="#modal-upload-image")
              span.glyphicon.glyphicon-picture

      #content-right
        p test
        #flashcard-info 

