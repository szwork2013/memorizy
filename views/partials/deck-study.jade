append head
  link(rel="stylesheet", href="/stylesheets/deck-edit.css")

append content
  #content
    #flashcard-editor
      #content-left
      #content-center
        #flashcard
          .term
            .text(ng-model="deck.flashcards[deck.active].term_text" 
            ng-tab="focusDefinition()" ng-shift-tab="display(deck.active - 1)" 
            focus-on="term" contenteditable="true" spellcheck="false" 
            data-placeholder="Term") 
              {{deck.flashcards[deck.active].term_text}}
            a.btn-image.btn-style(href="#")
              span.glyphicon.glyphicon-picture
          .definition
