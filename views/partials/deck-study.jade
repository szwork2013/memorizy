            .text(ng-model="deck.flashcards[deck.active].definition_text" ng-tab="display(deck.active + 1)" ng-shift-tab="focusTerm()" 
            focus-on="definition" contenteditable="true" spellcheck="false" data-placeholder="Definition")
              //-{{deck.flashcards[deck.active].definition_text}}
            
      #content-right
        #study-options
          input(type="radio" name="show-first" value="term")
